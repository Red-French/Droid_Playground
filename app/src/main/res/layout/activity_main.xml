<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.redfrench.droid_playground.MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="net.redfrench.droid_playground.TopSectionFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:layout="@layout/top_section"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <fragment
        android:id="@+id/fragment2"
        android:name="net.redfrench.droid_playground.ImageFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment"
        android:layout_marginTop="50dp"
        tools:layout="@layout/image_fragment"/>

    <TextView
        android:id="@+id/mockMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

</RelativeLayout>
